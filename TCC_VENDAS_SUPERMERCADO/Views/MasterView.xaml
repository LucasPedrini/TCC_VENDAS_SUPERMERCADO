<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC_VENDAS_SUPERMERCADO.Views.MasterView"
             Title = "Perfil">
    <ContentPage Title="Menu">
        <Frame OutlineColor ="Silver"
           VerticalOptions="CenterAndExpand"
           Margin="15">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Button Text="Perfil" Command="{Binding EditarPerfilCommand}"></Button>
                <Button Text="Meus Pedidos" Command="{Binding MeusPedidoCommand}"></Button>
                <Button Text="Carrinho" Command="{Binding MeuCarrinhoCommand}"></Button>
            </StackLayout>
        </Frame>
    </ContentPage>
</TabbedPage>