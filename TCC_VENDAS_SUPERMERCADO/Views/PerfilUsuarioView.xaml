<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TCC_VENDAS_SUPERMERCADO.Views.PerfilUsuarioView">
    <ContentPage.Content>
        <Frame OutlineColor ="Silver"
           VerticalOptions="CenterAndExpand"
           Margin="15">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                <Label Text="Nome"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Label Text="Email"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Label Text="Rua"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Label Text="Bairro"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Label Text="Número"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Label Text="CEP"></Label>
                <BoxView Color="Gray" HeightRequest="1" HorizontalOptions="Fill"></BoxView>
                <Button Text="Editar">
                </Button>
                <Button Text="Salvar"></Button>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>